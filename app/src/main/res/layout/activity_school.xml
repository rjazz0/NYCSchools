<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SchoolActivity"
    android:padding="@dimen/padding">

    <TextView
        android:id="@+id/school_sat_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="school name sat"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/readingTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Reading"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/school_sat_name" />

    <TextView
        android:id="@+id/mathTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Math"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/readingTextView" />

    <TextView
        android:id="@+id/writingTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Writing"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mathTextView" />


</androidx.constraintlayout.widget.ConstraintLayout>